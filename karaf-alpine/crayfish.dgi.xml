<?xml version="1.0" encoding="UTF-8"?>
<features name="crayfish-features" xmlns="http://karaf.apache.org/xmlns/features/v1.3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">
    <repository>mvn:org.apache.activemq/activemq-karaf/5.15.9/xml/features</repository>
    <repository>mvn:org.apache.camel.karaf/apache-camel/2.24.1/xml/features</repository>

  <feature name="crayfish-feature-install" install="auto">
    <feature dependency="true">json-jackson</feature>
    <feature dependency="true">camel-blueprint</feature>
    <feature dependency="true">camel-http4</feature>
    <feature dependency="true">camel-jms</feature>
    <feature dependency="true">activemq-camel</feature>
    <feature>camel-jackson</feature>
    <feature>aries-blueprint</feature>

    <bundle>mvn:org.fcrepo.camel/fcrepo-service-activemq/5.0.0</bundle>
    <bundle>mvn:ca.islandora.alpaca/islandora-event-support/1.0.3</bundle>
    <bundle>mvn:ca.islandora.alpaca/islandora-connector-derivative/1.0.3</bundle>

    <config name="org.fcrepo.camel.service.activemq">
      jms.brokerUrl=tcp://localhost:61616
    </config>
  </feature>
</features>
